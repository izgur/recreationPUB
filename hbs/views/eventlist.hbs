<h1>{{title}}</h1>
<div class="row">
  {{#each events as |event|}}
    <div class="col-12 col-xxl-6">
      <div class="card mt-4">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="card-title mt-1 mb-1">{{event.name}}</h3>
              {{#each synonyms as |synonym|}}
                {{synonym}}{{#unless @last}},{{/unless}}
              {{/each}}
            </div>
            <div class="text-nowrap ps-3">{{{stars event.rating}}}</div>
          </div>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div><h6
                class="card-subtitle mb-1 text-muted"
              >{{event.type}}</h6>
              <p class="card-text">{{event.description}}</p></div>
            <div class="text-nowrap ps-3"><span
                class="badge rounded-pill text-bg-dark"
              >{{event.distance}}</span></div>
          </div>
        </div>
        <div class="card-footer text-muted">
          {{#each fields as |field|}}
            <span class="badge text-bg-secondary">{{field}}</span>
          {{/each}}
          {{#each keywords as |keyword|}}
            <span class="badge text-bg-dark">{{keyword}}</span>
          {{/each}}
        </div>
      </div>
    </div>
  {{/each}}
</div>